<%= simple_form_for @restaurant do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
  <%= f.input :name, placeholder: "Restaurant name..." %>
  <%= f.input :address, placeholder: "Restaurant address.." %>
  <%= f.input :category, placeholder: "Category...(chinese, italian, japanese, french and belgian!)" %>
   </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
